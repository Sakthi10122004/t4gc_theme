{{!< default}}

<section class="outer error-content" style="display:flex; align-items:center; justify-content:center; min-height:80vh; background:#f5f5f5; font-family: 'Segoe UI', sans-serif;">
    <div class="inner" style="text-align:center; max-width:600px; padding:2rem;">
        
        <h1 class="error-code" style="font-size:6rem; color:#773ada; margin-bottom:1rem; animation: fadeIn 1s ease;">{{statusCode}}</h1>
        
        <p class="error-description" style="font-size:1.5rem; color:#555; margin-bottom:2rem; animation: fadeIn 1.2s ease;">
            {{message}}
        </p>
        
        <a class="error-link" href="{{@site.url}}" style="display:inline-block; padding:0.8rem 2rem; background:#773ada; color:#fff; text-decoration:none; border-radius:8px; font-weight:600; transition:0.3s; animation: fadeIn 1.5s ease;">
            Go to the front page â†’
        </a>
        
    </div>
</section>

<style>
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.error-link:hover {
    background:#5e2fa0; /* slightly darker purple on hover */
    transform: translateY(-2px);
}
</style>
